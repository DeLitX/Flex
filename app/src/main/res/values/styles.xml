<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Icon">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Icon.Mini">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <style name="Icon.Main">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">130dp</item>
    </style>
    <style name="Text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="TextIconSolid">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/font_awesome_solid</item>
    </style>
    <style name="TextIcon">
        <item name="fontFamily">@font/font_awesome</item>
    </style>
</resources>
