<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayish</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Icon">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Icon.VeryMini">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    <style name="Icon.NotVeryMini">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
    </style>
    <style name="Icon.Mini">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="Icon.Main">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">130dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="Text.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="Text.Black.Mini">
        <item name="android:textSize">@dimen/text_mini_size</item>
    </style>
    <style name="Text.Black.Huge">
        <item name="android:textSize">@dimen/text_huge_size</item>
    </style>
    <style name="Text.Black.Middle">
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>
    <style name="Text.Gray">
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>
    <style name="Text.Gray.Mini">
        <item name="android:textSize">@dimen/text_mini_size</item>
    </style>

    <style name="TextIconSolid">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/font_awesome_solid</item>
    </style>

    <style name="TextIcon">
        <item name="fontFamily">@font/font_awesome</item>
    </style>

    <style name="TextHint">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>

    <style name="Base.Widget.Design.TabLayout.Custom">
        <item name="tabIndicatorColor">@color/colorGrayish</item>
    </style>
    <style name="Divider">
        <item name="android:background">@color/colorDarkerGray</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
