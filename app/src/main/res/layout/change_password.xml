<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgot_pass_layout">

    <TextView
        android:id="@+id/forgot_pass_text"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/enter_email" />

    <EditText
        android:id="@+id/forgot_pass_email"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_pass_text"
        android:hint="@string/email"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/registration_fields"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/forgot_pass_button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="75dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/forgot_pass_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/registration_buttons"
        android:textSize="20sp"
        android:text="@string/send_code_email" />

    <EditText
        android:id="@+id/change_pass_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_pass_button"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/registration_fields"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/code_email"
        android:inputType="textEmailAddress"
        android:visibility="gone" />

    <EditText
        android:id="@+id/change_pass_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pass_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:padding="5dp"
        android:background="@drawable/registration_fields"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/new_password"
        android:inputType="textEmailAddress"
        android:visibility="gone" />

    <Button
        android:id="@+id/change_pass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pass_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:background="@drawable/registration_buttons"
        android:text="@string/change_password"
        android:visibility="gone" />
</RelativeLayout>