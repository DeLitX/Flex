<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <Button
        android:background="@drawable/main_app_buttons"
        android:id="@+id/button_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration" />

    <Button
        android:background="@drawable/main_app_buttons"
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_registration"
        android:text="Sign In" />

    <Button
        android:background="@drawable/main_app_buttons"
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:text="Logout" />

    <Button
        android:background="@drawable/main_app_buttons"
        android:id="@+id/button_checkLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_logout"
        android:text="CheckLog" />

    <Button
        android:background="@drawable/main_app_buttons"
        android:id="@+id/button_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_checkLog"
        android:text="Change pass" />
    <Button
        android:id="@+id/button_make_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_app_buttons"
        android:layout_below="@id/button_change_pass"
        android:text="Make post"/>
</RelativeLayout>